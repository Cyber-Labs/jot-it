{
    "name": "jotit",
    "displayName": "JotIt",
    "description": "An extension which enables you save notes and have a fast lookup into it.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:jotit.search",
        "onCommand:jotit.add"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "jotit.search",
                "title": "Find your saved notes."
            },
            {
                "command": "jotit.add",
                "title": "Add new text note."
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "devDependencies": {
        "@types/vscode": "^1.47.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
